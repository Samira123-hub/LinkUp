<!-- res/drawable/rounded_corners.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#FFF" /> <!-- Utilise la couleur que tu souhaites -->

    <!-- Coins arrondis -->
    <corners android:radius="0dp" /> <!-- Ajuste la taille du rayon ici -->

    <!-- Optionnel : Bordure autour du layout -->
    <stroke
        android:width="1dp"
        android:color="#F0F0F2" /> <!-- Blanc pour la bordure -->
</shape>