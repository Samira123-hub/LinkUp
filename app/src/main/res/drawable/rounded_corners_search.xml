<!-- res/drawable/rounded_corners.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#d6d4d4" /> <!-- Utilise la couleur que tu souhaites -->

    <!-- Coins arrondis -->
    <corners android:radius="90dp" /> <!-- Ajuste la taille du rayon ici -->

    <!-- Optionnel : Bordure autour du layout -->
    <stroke
        android:width="0dp"
        android:color="#F5F5F5" /> <!-- Blanc pour la bordure -->
</shape>