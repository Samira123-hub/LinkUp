<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:layout_marginTop="7dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/listvieithem"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="2dp"
        android:src="@drawable/default_profile"
        android:background="@drawable/image_profile"
         />

    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <!-- Nom de l'utilisateur -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fati Lakhal"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <!-- Dernier message -->
        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, how are you doing?"
            android:textColor="@color/dark"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
           android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <!-- Informations supplémentaires (temps et notifications) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:paddingEnd="10dp"
        android:gravity="center_vertical">

        <!-- Dernière utilisation -->
        <TextView
            android:id="@+id/last_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:textColor="@color/dark"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="10dp" />

        <!-- Nombre de messages non lus -->
        <TextView
            android:id="@+id/nbm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/nbmessages"
            android:text="23"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="20dp" />
    </LinearLayout>
</LinearLayout>
